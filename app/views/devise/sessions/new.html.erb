<div class="container">
<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, html: { :class => 'form-horizontal' }, url: session_path(resource_name)) do |f| %>

    <%= f.input :email, input_html: {:class => 'form-control' }, required: false, autofocus: true %>
    <%= f.input :password, input_html: {:class => 'form-control' }, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>


  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>