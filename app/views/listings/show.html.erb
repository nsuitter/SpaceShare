<div class="container">
  
  <div class="listing-match">
      <div class="match-title">
        <%= @listing.title %>
      </div>
      <div class="match-body">
        <p>
          <%= @listing.body %>
        </p>
        <div class="image-thumb">
          <% for picture in @listing.listing_pictures %>
            <%= image_tag picture.picture.url(:thumb) , :onclick => "imageSwitch(this)" %>
          <% end %>
        </div>
        <div class="image-large">
          <% for picture in @listing.listing_pictures.first(1) %>
            <%= image_tag picture.picture.url(:large) %> 
          <% end %>
        </div>
      </div>
      <div class="bottom-left"><%= link_to 'Edit', edit_listing_path %></div>
      <div class="bottom-right"><%= link_to 'Delete', listing_path, method: :delete, data: {confirm: "Are you sure?"}, :class => 'btn btn-xs warning' %></div>
  </div>
</div>
